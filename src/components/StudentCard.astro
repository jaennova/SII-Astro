---
interface Props {
  student: {
    no_control: string;
    nombre: string;
    carrera: string;
    semestre: number;
    promedio: number;
    horario: Array<{
      materia: string;
      hora: string;
    }>;
  };
}

const { student } = Astro.props;
---

<div class="bg-white rounded-lg shadow-lg overflow-hidden transform transition duration-300 hover:scale-105">
  <div class="bg-primary-600 px-6 py-4">
    <h3 class="text-xl font-bold text-white">{student.nombre}</h3>
    <p class="text-primary-100">No. Control: {student.no_control}</p>
  </div>
  
  <div class="p-6">
    <div class="mb-4">
      <p class="text-gray-600">Carrera</p>
      <p class="font-semibold text-gray-800">{student.carrera}</p>
    </div>
    
    <div class="grid grid-cols-2 gap-4 mb-4">
      <div>
        <p class="text-gray-600">Semestre</p>
        <p class="font-semibold text-gray-800">{student.semestre}Â°</p>
      </div>
      <div>
        <p class="text-gray-600">Promedio</p>
        <p class="font-semibold text-gray-800">{student.promedio}</p>
      </div>
    </div>
    
    <div>
      <p class="text-gray-600 mb-2">Horario</p>
      <div class="space-y-2">
        {student.horario.map((clase) => (
          <div class="bg-primary-50 p-3 rounded-md">
            <p class="font-medium text-primary-800">{clase.materia}</p>
            <p class="text-sm text-primary-600">{clase.hora}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</div>